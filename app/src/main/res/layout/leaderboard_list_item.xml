<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

    <TextView
        android:id="@+id/employee"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/space_after_small"
        android:layout_marginTop="@dimen/space_after_small"
        android:text="First Last"
        android:textColor="@color/darkgray"
        android:textSize="@dimen/font_size_medium"
        android:textStyle="bold"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/employee"
        android:layout_marginBottom="@dimen/space_after_small">

        <TextView
            android:id="@+id/miles"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2,000"
            android:textColor="@color/darkgray"
            android:textSize="@dimen/font_size_small"
            android:layout_gravity="right"
            android:gravity="right"/>

        <TextView
            android:id="@+id/miles_tag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" mi"
            android:textColor="@color/lightgray"
            android:textSize="@dimen/font_size_small"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/trips"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="196"
            android:textColor="@color/darkgray"
            android:textSize="@dimen/font_size_small"
            android:gravity="right"/>

        <TextView
            android:id="@+id/trips_tag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/lightgray"
            android:textSize="@dimen/font_size_small"
            android:text=" trips"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/commute_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/darkgray"
            android:textSize="@dimen/font_size_small"
            android:text="bike"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/city"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/darkgray"
            android:textSize="@dimen/font_size_small"
            android:text="P"
            android:gravity="right"
            />
    </LinearLayout>

</RelativeLayout>