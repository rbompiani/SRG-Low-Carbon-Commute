<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                tools:context="com.rbompiani.srglowcarboncommute.LoginActivity"
                android:background="@color/rorange">

    <LinearLayout
        style="@style/SignupLinearWrapperLarge">

        <EditText
            android:id="@+id/firstname"
            android:hint="first name"
            style="@style/InputField"/>

        <EditText
            android:id="@+id/lastname"
            android:hint="last name"
            style="@style/InputField"/>

        <EditText
            android:id="@+id/email"
            android:hint="email"
            style="@style/InputField"/>

        <EditText
            android:id="@+id/usernameField"
            android:hint="username"
            android:layout_marginTop="30dp"
            style="@style/InputField"/>

        <EditText
            android:inputType="textPassword"
            android:id="@+id/passwordField"
            android:hint="password"
            style="@style/InputField"/>

        <Button
            android:text="sign up"
            android:id="@+id/signupButton"
            style="@style/ButtonLight"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="30dp"
            android:id="@+id/bikeIcon"
            android:adjustViewBounds="true"
            android:src="@drawable/bikewhite"/>


    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:src="@drawable/srgwhite"
        android:alpha=".15"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:adjustViewBounds="true"
        />

</RelativeLayout>
